<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
    <Button
        android:id="@+id/btn_mark_spot"

        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:minHeight="48dp"
        android:text="Mark Spot"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/markspot"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:drawablePadding="-26dp"
        android:drawableLeft="@drawable/pois"
        />

        <TextView
            android:id="@+id/location_spot"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="2.69"
            android:lines="4"
            android:textSize="16dp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <Button
                android:id="@+id/alertoff"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1"

                android:background="@drawable/bolder_alertoff"
                android:text="Alerting Off"></Button>

            <Button
                android:id="@+id/alerton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/bolder_alerton"
                android:text="Alerting On"
                android:textColor="#00DD00"></Button>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="4"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"

            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/alert_location"/>
    </LinearLayout>

</RelativeLayout>