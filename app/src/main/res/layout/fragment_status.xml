<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/status_border"
            >

            <TextView
                android:paddingStart="16dp"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:labelFor="@+id/non_emergency_number"
                android:paddingTop="11dp"
                android:text="GPS Signal"
                android:textAppearance="@android:style/TextAppearance.Medium"
                 />

            <ImageView
                android:paddingEnd="16dp"
                android:id="@+id/gps_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:layout_gravity="right|center_vertical"
                android:scaleType="fitEnd"

                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/status_border"
        android:paddingTop="1dp">

        <TextView
            android:paddingStart="16dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:labelFor="@+id/non_emergency_number_2"
            android:paddingTop="11dp"
            android:text="Iridium Signal"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

        <ImageView
            android:paddingEnd="16dp"
            android:id="@+id/iridium_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"

            android:layout_gravity="right|center_vertical"
            android:scaleType="fitEnd"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/status_border">
        <TextView
            android:paddingStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:labelFor="@+id/non_emergency_number_4"
            android:paddingTop="11dp"
            android:text="Bluetooth Signal"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
        <ImageView
            android:id="@+id/bluetooth_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:layout_gravity="right|center_vertical"
            android:paddingEnd="16dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/status_border">
        <TextView
            android:paddingStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:labelFor="@+id/non_emergency_number_6"
            android:text="Device Name"
            android:paddingTop="11dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
        <TextView
            android:paddingEnd="16dp"
            android:id="@+id/txtDevice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textAlignment="textEnd"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/status_border">
        <TextView
            android:paddingTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:labelFor="@+id/non_emergency_number_7"
            android:paddingStart="16dp"
            android:text="IMEI"

            android:textAppearance="@android:style/TextAppearance.Medium"
            />
        <TextView
            android:paddingEnd="16dp"
            android:id="@+id/txtImei"
            android:layout_width="0dp"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:ellipsize="end"
            android:textStyle="bold"
            android:paddingTop="13dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/status_border"

        >
        <TextView
            android:paddingTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:labelFor="@+id/non_emergency_number_8"
            android:paddingBottom="2dp"
            android:paddingStart="16dp"
            android:text="Firmware"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
        <TextView
            android:id="@+id/txtFirmware"
            android:layout_width="0dp"
            android:paddingEnd="16dp"
            android:ellipsize="end"
            android:textAlignment="textEnd"
            android:paddingTop="12dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"


            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="291dp"
        android:background="@color/border">

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/testtest"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#FF6600"
            android:text="Connect"
            android:visibility="gone"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/button_connect"
            >
        </Button>
        <Button
            android:id="@+id/button_connect"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#FF6600"
            android:text="Connect"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/Signature"
            android:layout_alignParentStart="true">

        </Button>

        <LinearLayout
            android:id="@+id/Signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_above="@+id/LinearVersion"
            >

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/icon_gmi" />
        </LinearLayout>
        <TextView
            android:id="@+id/ConnectionState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connection failed"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/button_connect"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:id="@+id/LinearVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center"

            >
            <TextView
                android:id="@+id/Version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0.0.0"
                android:textSize="10dp"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>