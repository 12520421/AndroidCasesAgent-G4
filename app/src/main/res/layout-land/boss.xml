<?xml version="1.0" encoding="utf-8"?>
<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<com.xzfg.app.widgets.ModalView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:modal="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    modal:buttonDrawable="@drawable/boss"
    modal:buttonText="@string/boss_mode"
    android:id="@+id/bossview">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/boss_mode"
                android:textColor="@color/redorange"
                android:textAppearance="@android:style/TextAppearance.Large"
            />

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/boss_mode_tap"
                android:textAppearance="@android:style/TextAppearance.Medium"
            />

        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/slot_game_display"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/execute_boss_mode"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

        </LinearLayout>
</com.xzfg.app.widgets.ModalView>
