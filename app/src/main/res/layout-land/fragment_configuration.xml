<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"

                    android:paddingBottom="6dp"

                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:text="REPORTING FREQUENCY"
                    android:textAppearance="@android:style/TextAppearance.Small" />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="12dp"

                    android:paddingTop="4dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/non_emergency_number_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:labelFor="@+id/non_emergency_number"
                            android:paddingBottom="2dp"
                            android:text="Normal"
                            android:textAppearance="@android:style/TextAppearance.Medium" />

                        <Spinner
                            android:id="@+id/spinner_normal"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_marginStart="150dp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd" />
                    </TableRow>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.2"
                        android:adjustViewBounds="true"
                        android:background="#666666"

                        />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/non_emergency_label_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:labelFor="@+id/non_emergency_label"
                            android:paddingBottom="2dp"
                            android:text="Alerting"
                            android:textAppearance="@android:style/TextAppearance.Medium" />

                        <Spinner
                            android:id="@+id/spinner_alerting"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="150dp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <!-- non-emergency button -->
            <LinearLayout
                android:id="@+id/frame_emergencyllll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"

                    android:paddingBottom="6dp"

                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:text="DEVICE"

                    android:textAppearance="@android:style/TextAppearance.Small"

                    />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="12dp"
                    android:paddingTop="4dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/emergency_number_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:labelFor="@+id/emergency_number"
                            android:paddingBottom="2dp"
                            android:text="LED Brightness"
                            android:textAppearance="@android:style/TextAppearance.Medium" />

                        <Spinner
                            android:id="@+id/spinner_led"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_weight="2"
                            android:textAlignment="textEnd" />
                    </TableRow>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.2"
                        android:adjustViewBounds="true"
                        android:background="#666666"

                        />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/alertmark_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:labelFor="@+id/emergency_number"
                            android:paddingBottom="2dp"
                            android:text="Alert/Mark Button"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <Spinner
                            android:id="@+id/spinner_alertmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd" />
                    </TableRow>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.2"
                        android:adjustViewBounds="true"
                        android:background="#666666"

                        />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/msg_timeout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:labelFor="@+id/emergency_number"
                            android:paddingBottom="2dp"
                            android:text="Message Timeout"
                            android:textAppearance="@android:style/TextAppearance.Medium" />

                        <Spinner
                            android:id="@+id/spinner_timeout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd" />
                    </TableRow>


                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
