<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:textSize="25dp"
        android:id="@+id/btn_mark_spot"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Mark Spot"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:background="@drawable/markspot"
        android:layout_margin="16dp"
        android:drawablePadding="-26dp"
        android:drawableLeft="@drawable/pois"
        />

        <TextView
            android:id="@+id/location_spot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:lines="2"
            android:textSize="16dp"
             />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="11dp"
            >

            <Button
                android:id="@+id/alertoff"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bolder_alertoff"
                android:text="Alerting Off"></Button>

            <Button
                android:id="@+id/alerton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bolder_alerton"
                android:text="Alerting On"
                android:textColor="#00DD00"></Button>


        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/alert_location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:lines="2"
            android:textSize="16dp"
            />


</LinearLayout>